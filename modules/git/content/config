[core]
    autocrlf = input
[init]
    defaultBranch = main
[alias]
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
    ahist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit --all
[merge]
    tool = vim
[rerere]
    enabled = true
[pull]
    rebase = true
[includeif "gitdir:~/repos/personal/"]
	path = config-personal
[includeif "gitdir:~/repos/work/"]
